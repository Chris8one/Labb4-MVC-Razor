@model CustomerViewModel


<h1 class="display-4">Create A New Customer</h1>
<hr class="hr-grad-title" />
<br />

<div class="row">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h5>Create Customer</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Customer" asp-action="AddNewCustomer" method="post">
                    <div class="mb-3">
                        <label class="form-label">Customer Name</label>
                        <input asp-for="CustomerVm.CustomerName" type="text" class="form-control" required="required" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Customer Email</label>
                        <input asp-for="CustomerVm.CustomerEmail" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Customer Phone Number</label>
                        <input asp-for="CustomerVm.CustomerPhone" type="text" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary mt-2">Create</button>
                    </div>
                </form>
            </div>
            <div class="card-footer"></div>
        </div>
    </div>
</div>